<div class="container text-center">


    <div class="row">

        <div class="col-md-12 text-center">

            <img src="/assets/img/burger1.jpg" width="200" height="200" />

        </div>

    </div>


    <div class="row">

        <div class="col-md-12 text-center">

            <h1>Eat-Da-Burger!</h1>

        </div>

    </div>


    <div class="row">

        <div class="col-md-6 text-center">

            <h2>Your Burgers!</h2>

            <ol>
                {{#each burgers}} {{#unless this.devoured}}
                <li>
                    <h3>
                        {{this.burger_name}}

                        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                            <input type="hidden" name="devoured" value="true">
                            <button type="submit" class="btn btn-primary">Eat it!!!!</button>
                        </form>
                    </h3>
                </li>
                {{/unless}} {{/each}}
            </ol>

        </div>


        <div class="col-md-6 text-center">

            <h2>Eaten Burgers!</h2>

            <ol>
                {{#each burgers}} {{#if this.devoured}}
                <li>
                    <h3>
                        {{this.burger_name}} ..Yummy!
                        <h3>

                            {{> burgers/delete-burger}}

                </li>
                {{/if}} {{/each}}
            </ol>

        </div>


    </div>


    <div class="row">

        <div class="col-md-12 text-center">
            <h1>Add a Burger</h1>
            <form class="create-update-form" action="burgers/create" method="POST">

                <div class="form-group">
                    <label for="burger"></label>
                    <input type="text" id="burger" name="name" placeholder="Burger Name:">
                </div>

                <button type="submit" class="btn btn-primary">Add Burger</button>
            </form>
        </div>
    </div>
</div>